name: vcpkg-update-dep

on:
  workflow_dispatch:

###############################################################################
# Add this section to your workflow file if it does not already have it to enable
# the job to write the dependency metadata.
###############################################################################
permissions:
  contents: write

###############################################################################
# Add these environment variables to your workflow to enable the vcpkg
# dependency graph integration.
###############################################################################
env:
  GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
  VCPKG_FEATURE_FLAGS: dependencygraph

jobs:
  build:
    runs-on: windows-latest

    # These steps assume an appropriate version of vcpkg is listed as a
    # submodule in your git repo. If it is not, you must update this workflow
    # to obtain it.

    steps:
      - name: Checkout code
        uses: actions/checkout@v4
        with:
          submodules: 'recursive'

      - name: Bootstrap vcpkg
        run: ${{ github.workspace }}/extern/vcpkg/bootstrap-vcpkg.bat

      - name: Integrate vcpkg
        run: |
          cd ${{ github.workspace }}/Plugin
          ls
          ${{ github.workspace }}/extern/vcpkg/vcpkg integrate install

      - name: Build with G++
        run: g++ ${{ github.workspace }}/Plugin/src/main.cpp
